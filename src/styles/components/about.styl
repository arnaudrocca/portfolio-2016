.about
    position fixed
    right 0
    color $white
    z-index 10

    &_title
        padding 3rem
        font-weight 200
        font-size 2.5rem
        text-transform lowercase
        font-variant small-caps
        cursor pointer

        &::after
            content ''
            position relative
            display block
            top 100%
            width 0rem
            height 2px
            margin-left 50%
            margin-top .1rem
            background $blue

            transition all .2s $ease-out

        &:hover
            &::after
                width 100%
                margin-left 0rem

    &_container
        position fixed
        width 30rem
        height 100vh
        top 0
        left 100%
        padding 3rem
        background $dark-grey
        text-align left

        transition left .5s $ease-out

    &_cross
        position absolute
        padding 3rem
        width 20px
        height 20px
        right 0
        top 0
        cursor pointer

        transition transform .2s $ease-out
        transform-origin 50% 50%

        &:hover
            transform scale(1.1)

        &:active
            transform scale(.9)

    &_header
        font-weight 200
        font-size 2.5rem
        text-transform lowercase
        font-variant small-caps

    .line
        display block
        width 0%
        height 2px
        margin 3rem auto
        background $blue

        transition width .6s $ease-in-out

    &_content
        font-weight 200
        font-size 1.5rem
        line-height 2.5rem

        p
            margin-top 3rem

    &_contact
        text-align center

        &_social
            text-align center
            margin 1rem

        &_mail
            margin-top 1rem

    &.active
        .about_container
            left calc(100% - 36rem)

            .line
                width 60%

@media mediaQueryMobile
    .about
        &_container
            width calc(100vw - 6rem)
            height 100vh
            left 100vw
            padding 3rem

        &.active
            .about_container
                left 0
