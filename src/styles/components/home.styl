.home
    position relative
    width 100%
    height 100%
    background $black
    color $white

    &_title
        padding 3rem
        line-height 2.5rem

        h1
            font-weight 200
            font-size 2.5rem
            text-transform lowercase
            font-variant small-caps

        h2
            font-weight 200
            font-size 1.4rem

    &_works
        position absolute
        width 100%
        height 10rem
        bottom 0
        z-index 2

        &_title
            width 100px
            margin 0 auto
            text-align center
            font-weight 200
            font-size 2rem
            text-transform lowercase
            font-variant small-caps
            opacity 1
            cursor pointer

            transition all .2s $ease-out

            &:hover
                margin-bottom 3rem

        &::after
            content ''
            position relative
            display block
            width 2px
            height 7rem
            margin-left 50%
            margin-top 1rem
            background $blue

        &.hide
            .home_works_title
                opacity 0
                margin-bottom 8rem

    &_experiment, canvas
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        z-index 1
