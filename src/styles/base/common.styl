html, body
	width 100%
	height 100%
	font-family 'Kelson Sans', Helvetica, sans-serif
	font-size 10px
	letter-spacing .05rem
	scrollbar-face-color $blue
	scrollbar-track-color $dark-grey

::-webkit-scrollbar
	width .5em

::-webkit-scrollbar-thumb
	background $blue

::-webkit-scrollbar-track
	background $dark-grey

::selection
	background $blue

a
	display inline-block
	text-decoration none
	color $white

.link
	&::before
		content ''
		position relative
		display block
		width 100%
		height 1px
		margin-left 0%
		top 2.2rem
		background $grey

	&::after
		content ''
		position relative
		display block
		width 0%
		height 2px
		margin-left 50%
		margin-top -.5rem
		background $blue

		transition all .2s $ease-out

	&:hover
		&::after
			width 100%
			margin-left 0%

@media mediaQueryLaptop
	html, body
		font-size 8px
@media mediaQueryTablet
	html, body
		font-size 6px
